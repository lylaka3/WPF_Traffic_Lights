<Window x:Class="XamlApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XamlApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="200"
        WindowStartupLocation="CenterScreen">
    <Grid x:Name="grid1">
        <StackPanel x:Name="TrafficLight" VerticalAlignment="Center">
            <Ellipse x:Name ="RedColor" Fill="Maroon" Width="50" Height="50" />
            <Ellipse x:Name ="YellowColor" Fill="DarkGoldenrod" Width="50" Height="50"/>
            <Ellipse x:Name ="GreenColor" Fill="DarkGreen" Width="50" Height="50"/>
        </StackPanel>
        <TextBlock Name="timer" Background="Gray" VerticalAlignment="Top" HorizontalAlignment="Center" TextAlignment="Center" Width="50" Height="20" Margin="30"/>
        
    </Grid>
</Window>